{
    "author": "Devhouse Spindle",
    "manifest_version": 2,
    "description": "__MSG_extDescription__",
    "icons": {
        "16": "img/icon-contextmenu.png",
        "32": "img/logo-32.png",
        "64": "img/logo-64.png",
        "128": "img/logo-128.png"
    },
    "browser_action": {
        "default_icon": {
          "22": "img/icon-menubar-inactive.png"
        },
        "default_popup": "index.html"
    },
    "background": {
        "scripts": [
            "js/vendor.js",
            "js/templates.js",
            "js/translations.js",
            "js/app_bg.js"
        ]
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+V"
            }
        }
  },
    "permissions": [
        "*://*/*",
        "contextMenus",
        "notifications",
        "storage",
        "tabs"
    ],
    "content_security_policy": "script-src 'self'; object-src 'self'",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/vendor.js",
                "js/app_tab.js"
            ],
            "run_at": "document_end",
            "all_frames": false
        },
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/vendor.js",
                "js/app_observer.js"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "options_ui": {
        "page": "index.html"
    },
    "web_accessible_resources": [
        "img/*.png",
        "css/*.css",
        "js/*.map"
    ],
    "default_locale": "en"
}
